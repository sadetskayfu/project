generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  hash    String
  salt    String
  
  profile Profile?
}

model Profile {
  id        Int     @id @default(autoincrement())
  firstName String?
  lastName  String?
  age       Int?
  user      User    @relation(fields: [userId], references: [id])
  userId    Int     @unique
}
