{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"esModuleInterop": true,
		"types": [
			"node"
		  ],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
		},

		 /* Bundler mode */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"moduleDetection": "force",

		/* Linting */
		//"strict": true,
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		//"noFallthroughCasesInSwitch": true
	},

	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	
}
