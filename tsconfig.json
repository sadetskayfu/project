{
	"compilerOptions": {
		"outDir": "./build/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"classNames": ["./src/shared/lib/classNames/classNames.ts"],
			"moduleClassNames": [
				"./src/shared/lib//getModuleClassNames/getModuleClassNames.ts"
			]
		}
	},

	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
